<button @onclick="OnClick">
    @Label
</button>

<label>Enter Hobby</label>
<input @bind="Hobby" />
<button @onclick="HandleButton" >Print Hobby</button>

@code {
    [Parameter]
    public string Label { get; set; }
    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public EventCallback<string> OnHobbyClick { get; set; }

    public string Hobby { get; set; }

    private async Task HandleButton()
    {
        await OnHobbyClick.InvokeAsync(Hobby); //async method call
    }
}
